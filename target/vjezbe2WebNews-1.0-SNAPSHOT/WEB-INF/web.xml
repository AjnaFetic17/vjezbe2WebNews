<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servleti.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registation</servlet-name>
        <servlet-class>servleti.registation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>servleti.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowNewsList</servlet-name>
        <servlet-class>servleti.ShowNewsList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditorOption</servlet-name>
        <servlet-class>servleti.EditorOption</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddNews</servlet-name>
        <servlet-class>servleti.AddNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PickNews</servlet-name>
        <servlet-class>servleti.PickNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowCommentsList</servlet-name>
        <servlet-class>servleti.ShowCommentsList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowNewsList</servlet-name>
        <url-pattern>/ShowNewsList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditorOption</servlet-name>
        <url-pattern>/EditorOption</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddNews</servlet-name>
        <url-pattern>/AddNews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PickNews</servlet-name>
        <url-pattern>/PickNews</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowCommentsList</servlet-name>
        <url-pattern>/ShowCommentsList</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
